            <div id="projectDetailContainer" class="row">
              <div class="col-lg-8 simpleForm">
                <%= render :partial => "project_details" -%>
              </div>
              <div class="col-lg-4">
                <%= render :partial => "layouts/contribution_section_box_avatar", :locals => { :object => @project } -%>
