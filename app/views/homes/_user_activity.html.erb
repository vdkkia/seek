<%= panel('My Recent Contributions', id: 'my-recent-contributions', body_options: { class: 'front-page-panel' }) do %>
    <ul class="feed"  data-step="3" data-intro="Here you can see your previous activity.">
      <% activity = current_user.person.recent_activity(Seek::Config.recent_contributions_number_of_entries).select {|a| a.activity_loggable} %>
      <% items = convert_logs_to_hash(activity) %>
      <% items.each do |item| %>
          <%= display_single_log_item_hash(item, item[:action]=='create' ? 'added' : 'updated') -%>
      <% end %>
    </ul>
<% end %>
